  <!-- Sheet Body -->
  <section class="sheet-body">
    <h2>Content</h2>
    <ol class="items-list">
      {{#each actor.items as |item itemId|}}
        <li class="item flexrow" draggable="true">
          <div class="item-name flexrow rollable">
            <div
              class="item-image"
              role="button"
              aria-label="{{item.name}}"
              style="background-image: url('{{item.img}}')"
            ></div>
            <h4>{{item.name}}</h4>
            <h4>{{item.data.data.quantity}}</h4>
            <div class="flexrow">
              <a
                class="sls-btn"
                title="Loot"
                data-eventType="loot"
                data-itemId={{itemId}}
              >
                <i class="fas fa-box"></i>
              </a>
              <a
                class="sls-btn"
                title="Loot Stack"
                data-eventType="lootStack"
                data-itemId={{itemId}}
              >
                <i class="fas fa-boxes"></i>
              </a>
              <a
                class="sls-btn"
                title="Remove"
                data-eventType="remove"
                data-itemId={{itemId}}
              >
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </div>
        </li>
      {{/each}}
    </ol>
    <br />
    <h3>Contains unique {{actor.items.size}} items.</h3>
  </section>

  <!-- Sheet Footer -->
  <footer class="sheet-footer">
    <button
      class="sls-btn"
      title="Loot All"
      data-eventType="lootAll"
      data-itemId={{itemId}}
    >
      <h3>Loot all</h3>
      <i class="fas fa-cart-arrow-down"></i>
    </button>
  </footer>
</form>